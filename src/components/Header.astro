---
import { Icon } from "astro-icon/components";
import logo from "../assets/medder-logo.svg";
---

<header class="w-full py-4 px-4 border-b border-gray-200 bg-white sticky top-0 z-50 bg-white dark:bg-dark-surface border-gray-200 dark:border-gray-700" role="banner">
  <nav class="max-w-6xl mx-auto flex items-center justify-between" aria-label="Main navigation">
	<a href="/" class="flex items-center gap-3 text-4xl font-bold text-gray-900 hover:text-gray-700 transition-colors dark:text-gray-100 dark:hover:text-white" aria-label="Medder - Home" >
		<img src={logo.src} width="50" height="50" alt="Medder logo" class="shrink-0" /> <span>Medder</span>
	</a>

    <!-- Mobile menu button -->
    <button
      type="button"
      class="md:hidden p-2 text-gray-600 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 rounded-lg"
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
      id="mobile-menu-button"
    >
      <Icon name="tabler:menu-2" class="w-6 h-6" aria-hidden="true" />
    </button>

    <!-- Desktop navigation -->
    <ul class="hidden md:flex items-center gap-6" role="list">
      <li>
        <a
          href="/features"
          class="text-gray-600 hover:text-gray-900 transition-colors"
          aria-current={Astro.url.pathname === '/features' ? 'page' : undefined}
        >
          Features
        </a>
      </li>
      <li>
        <a
          href="/about"
          class="text-gray-600 hover:text-gray-900 transition-colors"
          aria-current={Astro.url.pathname === '/about' ? 'page' : undefined}
        >
          About
        </a>
      </li>
      <li>
        <a
          href="/contact"
          class="px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors"
          aria-current={Astro.url.pathname === '/contact' ? 'page' : undefined}
        >
          Contact
        </a>
      </li>
      <li>
				<!-- Dynamic light/dark theme toggle -->
				<button id="theme-toggle"
					type="button"
					class="inline-flex items-center justify-center rounded-md border px-2 py-2 text-sm
       border-gray-200 bg-white text-gray-700 hover:bg-gray-50 hover:text-gray-900
       dark:border-gray-700 dark:bg-gray-900 dark:text-gray-200 dark:hover:bg-gray-800 dark:hover:text-white"
					aria-label="Toggle theme"
					aria-pressed="false">
					<span id="theme-icon" aria-hidden="true"></span>
				</button>
      </li>
    </ul>
  </nav>

  <!-- Mobile menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden border-t border-gray-200 bg-white"
    role="menu"
    aria-labelledby="mobile-menu-button"
  >
    <ul class="flex flex-col py-4" role="list">
      <li>
        <a
          href="/features"
          class="block px-4 py-3 text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          role="menuitem"
          aria-current={Astro.url.pathname === '/features' ? 'page' : undefined}
        >
          Features
        </a>
      </li>
      <li>
        <a
          href="/about"
          class="block px-4 py-3 text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          role="menuitem"
          aria-current={Astro.url.pathname === '/about' ? 'page' : undefined}
        >
          About
        </a>
      </li>
      <li>
        <a
          href="/contact"
          class="block px-4 py-3 text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors"
          role="menuitem"
          aria-current={Astro.url.pathname === '/contact' ? 'page' : undefined}
        >
          Contact
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  // Toggle button switching logic. This renders either sun or moon button
	const themeToggle = document.getElementById("theme-toggle");
	const themeIcon = document.getElementById("theme-icon");

	function renderThemeIcon(isDark) {
		if (!themeIcon) return;

		// Tabler icons (outline) â€” inline SVG so no extra dependencies needed
		themeIcon.innerHTML = isDark
			? `
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
						 viewBox="0 0 24 24" fill="none" stroke="currentColor"
						 stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
						 aria-hidden="true">
					<path d="M12 3a6 6 0 1 0 9 9a9 9 0 1 1 -9 -9" />
				</svg>
			`
			: `
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
						 viewBox="0 0 24 24" fill="none" stroke="currentColor"
						 stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
						 aria-hidden="true">
					<circle cx="12" cy="12" r="4" />
					<path d="M12 2v2" />
					<path d="M12 20v2" />
					<path d="M4.93 4.93l1.41 1.41" />
					<path d="M17.66 17.66l1.41 1.41" />
					<path d="M2 12h2" />
					<path d="M20 12h2" />
					<path d="M6.34 17.66l-1.41 1.41" />
					<path d="M19.07 4.93l-1.41 1.41" />
				</svg>
			`;
	}

	function isDarkNow() {
		return document.documentElement.classList.contains("dark");
	}

	// Initial icon state (on load)
	renderThemeIcon(isDarkNow());
	if (themeToggle) themeToggle.setAttribute("aria-pressed", String(isDarkNow()));

	if (themeToggle) {
		themeToggle.addEventListener("click", () => {
			const root = document.documentElement;
			const isDark = root.classList.toggle("dark");
			localStorage.setItem("theme", isDark ? "dark" : "light");

			renderThemeIcon(isDark);
			themeToggle.setAttribute("aria-pressed", String(isDark));
		});
	}

  // Mobile menu toggle functionality
  const menuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuButton && mobileMenu) {
    menuButton.addEventListener("click", () => {
      const isExpanded = menuButton.getAttribute("aria-expanded") === "true";
      menuButton.setAttribute("aria-expanded", String(!isExpanded));
      mobileMenu.classList.toggle("hidden");
    });

    document.addEventListener("click", (e) => {
      if (
        !menuButton.contains(e.target) &&
        !mobileMenu.contains(e.target) &&
        !mobileMenu.classList.contains("hidden")
      ) {
        menuButton.setAttribute("aria-expanded", "false");
        mobileMenu.classList.add("hidden");
      }
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && !mobileMenu.classList.contains("hidden")) {
        menuButton.setAttribute("aria-expanded", "false");
        mobileMenu.classList.add("hidden");
        menuButton.focus();
      }
    });
  }
</script>
